<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Card">
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.CardContent">
        <item name="android:padding">@dimen/cardview_content_padding</item>
    </style>

</resources>
