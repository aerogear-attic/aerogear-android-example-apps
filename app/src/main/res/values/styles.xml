<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Card">
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.CardContent">
        <item name="android:padding">@dimen/cardview_content_padding</item>
    </style>

    <style name="AppTheme.Meme.Preview" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/meme_preview_text_size</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
    </style>

</resources>
