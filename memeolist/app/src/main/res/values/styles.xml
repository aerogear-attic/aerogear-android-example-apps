<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Card">
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.CardContent">
        <item name="android:padding">@dimen/cardview_content_padding</item>
    </style>

    <style name="AppTheme.Meme.Preview" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/meme_preview_text_size</item>
        <item name="android:lineSpacingMultiplier">@dimen/meme_preview_text_line_spacing</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">@dimen/meme_preview_text_shadow</item>
        <item name="android:shadowDy">@dimen/meme_preview_text_shadow</item>
        <item name="android:shadowRadius">@dimen/meme_preview_text_radius</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.Icon" parent="AppTheme.Toolbar">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginStart">@dimen/toolbar_icon_margin</item>
        <item name="android:layout_marginEnd">@dimen/toolbar_icon_margin</item>
        <item name="android:layout_width">@dimen/toolbar_icon_size</item>
        <item name="android:layout_height">@dimen/toolbar_icon_size</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="AppTheme.Toolbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
    </style>

</resources>
